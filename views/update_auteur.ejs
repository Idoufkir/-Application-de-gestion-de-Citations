            </div>
          </div>
          <div class="col-lg-6">
            <div id="mc_embed_signup">
              <form target="_blank"   class="subscription relative">
                <input type="email"  placeholder="Addresse email" required>
                <div style="position: absolute; left: -5000px;">
                </div>
                <button class="primary-btn hover d-inline-flex align-items-center"><span class="mr-10">Commencer</span><span class="lnr lnr-arrow-right"></span></button>
                <div class="info"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Subscription Area -->
    <!-- Start footer Area -->
    <footer class="footer-area relative" style="background: url(/img/f-bg.jpg);">
          
