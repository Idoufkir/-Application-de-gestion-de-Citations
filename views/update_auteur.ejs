  <div class="main-wrapper">
    

    <!-- Start Contact Area -->
    <section class="section-gap contact-area">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-10 ml-auto col-md-6">
            <form id="myForm" action="/update_auteur" method="post" class="contact-form text-left">
              <input type="hidden" value="<%= row.id_a %>" name="id_a">
              <div class="form-group">
                <label for="name">Nom :</label>
                <input type="text" class="common-input mt-10"  placeholder="Modifier Nom" value="<%= row.nom %>" name="nom" required>
              </div>
              <div class="form-group">
                <label for="name">Prénom :</label>
                <input type="text" class="common-input mt-10"  placeholder="Modifier Nom" value="<%= row.prenom %>" name="prenom" required>
              </div>
              <div class="form-group">
                <label for="name">Age :</label>
                <input type="text" class="common-input mt-10"  placeholder="Modifier l'age" value="<%= row.age %>" name="age" required>
              </div>
              <div class="form-group">
                <label for="description">Nationalité :</label>
                <input type="text" class="common-input mt-10"  placeholder="Modifier Nationalité" value="<%= row.nationalite %>" name="natio" required>
              </div>
          
              <button type="submit" class="primary-btn white-bg d-inline-flex align-items-center mt-10 ml-auto">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </section>
    <!-- Start Contact Area -->
    <section class="subscription-area">
      <div class="container">
        <div class="row justify-content-between">
